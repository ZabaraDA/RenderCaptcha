<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="addButton" Click="addButton_Click" Width="150" Height="50" Content="Create captcha" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Button>
        <TextBlock x:Name="tb" Height="20"></TextBlock >
        <ListView Name="lw" Height="350" Width="150" VerticalAlignment="Top" FontSize="24">
        </ListView>
        <Grid Grid.Column="1" Name="grd"></Grid>
    </Grid>
</Window>
